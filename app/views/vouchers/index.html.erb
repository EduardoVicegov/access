<h1>Vouchers</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User Name</th>
      <th>Token</th>
      <th>Status</th>
      <th colspan="3" ><strong>Actions</strong></th>
    </tr>
  </thead>
  <tbody>
    <% @vouchers.each do |voucher| %>
      <tr>
        <td><%= voucher.user_name %></td>
        <td><%= voucher.token %></td>
        <td><%= voucher.status %></td>

        <td>
            <%= link_to voucher_path(voucher) do %>
            <i class="fas fa-eye"></i>
            <%end%>
        </td>
        <td>
        <%= link_to edit_voucher_path(voucher) do %>
        <i class="fas fa-edit"></i>
        <%end%>
        </td>

        <td><%= link_to voucher_path(voucher), method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fas fa-trash"></i>
        <%end%>
        </td>
      
      </tr>
    <% end %>
  </tbody>
</table>
<div class="d-flex justify-content-center">
<%= paginate @vouchers%>
</div>