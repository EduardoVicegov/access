<h2> Visitors </h2>

<table class="table table-hover" >
  <thead>
    <tr>      
      <th><strong>Name</strong></th>
      <th><strong>CPF</strong></th>
      <th><strong>Visit Sector</strong></th>
      <th><strong>Entry Date</strong></th>
      <th colspan="3" ><strong>Actions</strong></th>
    </tr>
  </thead>
  
  <tbody>
    <% @visitors.each do |visitor| %>     
      <tr> 
        <td> <%= visitor.name %> </td>
        <td> <%= visitor.cpf %> </td>
        <td> <%= visitor.visit_sector %> </td>
        <td> <%= visitor.created_at%> </td>
        <td> 
          <%= link_to visitor_path(visitor) do %>
            <i class="fas fa-eye"></i>
          <%end%>
        </td>
        <td> 
          <%= link_to edit_visitor_path(visitor) do %> 
            <i class="fas fa-edit"></i>
          <%end%>
        </td>
        <td> 
          <%= link_to visitor_path(visitor), method: :delete, data: {confirm: 'Are you sure?'} do %>
            <i class="fas fa-trash"></i>
          <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="d-flex justify-content-center">
<%= paginate @visitors%>
</div>



