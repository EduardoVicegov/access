<%= simple_form_for visitor do |f| %>
  
  <% if @cpf_error %>
    <div class="alert alert-danger">
      <%= @cpf_error %>
    </div>
  <% end %>
  
  <p>
    <%= f.input :name %>
  </p>

  <p>
    <%= f.input :cpf %>
  </p>

  <p>
    <%= f.input :visit_sector, as: :select, collection: Visitor.fields_visit_sectors.keys.map { |sector| [sector.humanize, sector] }, input_html: { class: 'form-control' } %>
  </p>
  
  <p>
    <%= f.input :observation %>
  </p>

  <p>
    <%= f.button :submit, class: 'btn btn-success' %>
    <%= link_to "Back", visitors_path, class: 'btn btn-primary' %>
  </p>

<% end %>

